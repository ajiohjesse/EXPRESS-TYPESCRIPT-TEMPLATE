{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "A template for building a REST API using Express and TypeScript",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:bun": "bun --hot src/index.ts",
    "build": "node build.config.mjs",
    "start": "cross-env NODE_ENV=production node dist/index.cjs",
    "clean": "rimraf dist",
    "clean:logs": "rimraf logs",
    "db:push": "drizzle-kit push",
    "db:push:prod": "cross-env NODE_ENV=production drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit && eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "check": "pnpm lint && pnpm format:check"
  },
  "sideEffects": [
    "./src/helpers/openapi/zod-extend.ts"
  ],
  "keywords": [
    "express",
    "typescript",
    "drizzle",
    "postgres",
    "express starter"
  ],
  "author": "Jesse Ajioh",
  "license": "MIT",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/supertest": "^6.0.2",
    "better-sse": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.3",
    "rate-limiter-flexible": "^5.0.5",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@vitest/coverage-v8": "^3.0.5",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.15.0",
    "prettier": "^3.5.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  }
}
